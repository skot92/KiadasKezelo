<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="horizontal"
    android:weightSum="1">


    <TextView
        android:id="@+id/txBalance"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:background="@drawable/buttonshape"
        android:text="@string/balance"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txSumBalance"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="2"
        android:text="asd"
        android:layout_alignBottom="@+id/txBalance"
        android:layout_toRightOf="@+id/txBalance"
        android:layout_toEndOf="@+id/txBalance" />

    <TextView
        android:id="@+id/txSumInComes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginTop="40dp"
        android:layout_row="1"
        android:background="@drawable/buttonshape"
        android:text="@string/all_incomes"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/txAllInComes"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="center_vertical"
        android:layout_row="1"
        android:background="@drawable/buttonshape"
        android:text="asd1"
        android:layout_alignRight="@+id/txSumBalance"
        android:layout_alignEnd="@+id/txSumBalance"
        android:layout_alignTop="@+id/txSumInComes" />


    <TextView
        android:id="@+id/txSumExpense"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/buttonshape"
        android:text="@string/all_expenses"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/txAllExpense"
        android:layout_alignBottom="@+id/txAllExpense"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txAllExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:text="asd3"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/txSumInComes"
        android:layout_toRightOf="@+id/txSumExpense"
        android:layout_toEndOf="@+id/txSumExpense" />

    <TextView
        android:id="@+id/txLast30Days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:text="@string/last_30_days"
        android:textSize="20dp"
        android:layout_below="@+id/txAllExpense"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:text="@string/expense"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/txAllInComes"
        android:layout_toStartOf="@+id/txAllInComes" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:text="@string/income"
        android:textSize="20dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="44dp" />

    <TextView
        android:id="@+id/txLast30DayExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:text="asd4"
        android:layout_above="@+id/textView2"
        android:layout_alignLeft="@+id/txLast30DayInCome"
        android:layout_alignStart="@+id/txLast30DayInCome" />

    <TextView
        android:id="@+id/txLast30DayInCome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:text="asd5"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/txAllExpense"
        android:layout_alignStart="@+id/txAllExpense" />-->


</RelativeLayout>